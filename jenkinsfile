pipeline {
    agent any

    environment {
        gitBranch = "Kenza/TaskPist"
        gitRepo = "https://github.com/marwaniiwael18/DEVOPS-Project.git"
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    git branch: gitBranch, url: gitRepo
                    sh 'ls -l'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Check Maven Version') {
            steps {
                script {
                    // Verify that Maven is installed correctly
                    sh 'mvn -v'
                }
            }
        }

        stage('Unit Test') {
            steps {
                script {
                    // Run unit tests and generate the JaCoCo report
                    sh 'mvn test jacoco:report -Dspring.profiles.active=test'
                }
            }
        }

        stage('Run Application') {
            steps {
                script {
                    // You can run your application here
                    sh 'mvn spring-boot:run'
                }
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline completed successfully!"
        }
        failure {
            echo "❌ Pipeline failed! Check the logs."
        }
    }
}
